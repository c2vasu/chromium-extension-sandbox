{
  "manifest_version": 3,
  "name": "GCP Namespace Reveeler (Translate Mode)",
  "version": "1.1.0",
  "description": "Replaces hashed Cloud Run IDs (x[0-9a-f]{16}) with their full namespaces in the GCP Console.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://console.cloud.google.com/*"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://console.cloud.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}